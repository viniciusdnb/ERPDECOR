<div class="container text-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">INICIO</a></li>
            <li class="breadcrumb-item"><a href="/tipoProduto">TIPO DE PRODUTOS</a></li>
            <li class="breadcrumb-item"><a>EDITAR TIPO</a></li>
            <li class="breadcrumb-item"><a href="/tipoProduto/new">NOVO TIPO <img src="img/add-24.png" alt=""></a>
            </li>
        </ol>
    </nav>
</div>
<main class="container">
    <% var arrTipoProdutp=data.arrData; arrTipoProdutp.forEach(el=> {
        tipoProduto = el;
        });

        %>
        <form action="/tipoProduto/edit/" method="post" class="row g-3">
            <input type="hidden" value="<%=tipoProduto.id_tipo_produto%>" name="id_tipo_produto">

            <div class="col">
                <label class="form-label">NOME TIPO PRODUTO</label>
                <input type="text" class="form-control" value="<%=tipoProduto.nome_tipo_produto%>" name="nome_tipo_produto">
            </div>
            <div class="row g-3">
                <div class="col-1">
                    <input type="submit" class="btn btn-success" value="SALVAR">
                </div>
                <div class="col-1">
                    <a class="btn btn-secondary" href="/tipoProduto">CANCELAR</a>
                </div>
            </div>

        </form>

</main>