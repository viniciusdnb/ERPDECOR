<div class="container text-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">INICIO</a></li>
            <li class="breadcrumb-item"><a href="/produto">LISTA DE PRODUTO</a></li>
            <li class="breadcrumb-item"><a>NOVO PRODUTO</a>
            </li>
        </ol>
    </nav>
</div>
<br>
<main class="container">
    
        <form action="/produto/new" method="post" class="row g-3">
            <div class="row">
                <div class="col">
                    <label class="form-label">NOME PRODUTO</label>
                    <input type="text" class="form-control" name="nome_produto">
                </div>
                <div class="col">
                    <label class="form-label">CODIGO CLIENTE</label>
                    <input type="text" class="form-control" name="codigo_cliente">
                </div>
                <div class="col p-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkChecked" name="ativo" checked>
                        <label class="form-check-label" for="checkChecked">
                            ATIVO
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label class="form-label">TIPO</label>
                    <select id="select-tipo" name="id_tipo" required>
                        <option value=""></option>
                        <% var arrTipos=data.arrTipos; arrTipos.forEach(tipo=>{%>
                            <option value="<%=tipo.id_tipo %>">
                                <%= tipo.nome_tipo_produto%>
                            </option>
                            <%}) %>
                    </select>
                </div>
                <div class="col">
                    <label class="form-label">FAMILIA</label>
                    <select id="select-familia" name="id_familia">
                        <option value=""></option>
                        <% var arrFamilias=data.arrFamilias; arrFamilias.forEach(familia=>{%>
                            <option value="<%=familia.id_familia %>">
                                <%= familia.nome_familia%>
                            </option>
                            <%})%>
                    </select>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-1">
                    <input type="submit" class="btn btn-success" required value="SALVAR">
                </div>
                <div class="col-1">
                    <a class="btn btn-secondary" href="/produto">CANCELAR</a>
                </div>
            </div>
        </form>
</main>

<script>
    new TomSelect("#select-tipo",{
        allowEmptyOption: true,
        sortField:{
            field:"text"
        }
    });

    new TomSelect("#select-familia",{
        allowEmptyOption: true,
        sortField:{
            field:"text"
        }
    })
</script>